fun main() {
    println("Kalkulator Sederhana")
    
    while (true) {
        println("Pilih operasi:")
        println("1. Penjumlahan")
        println("2. Pengurangan")
        println("3. Perkalian")
        println("4. Pembagian")
        println("5. Keluar")
        
        print("Masukkan pilihan (1/2/3/4/5): ")
        val choice = readLine()
        
        when (choice) {
            "1" -> doAddition()
            "2" -> doSubtraction()
            "3" -> doMultiplication()
            "4" -> doDivision()
            "5" -> {
                println("Terima kasih! Keluar dari kalkulator.")
                return
            }
            else -> println("Pilihan tidak valid. Silakan coba lagi.")
        }
    }
}

fun doAddition() {
    val num1 = getNumber("Masukkan angka pertama: ")
    val num2 = getNumber("Masukkan angka kedua: ")
    val result = num1 + num2
    println("Hasil penjumlahan: $result")
}

fun doSubtraction() {
    val num1 = getNumber("Masukkan angka pertama: ")
    val num2 = getNumber("Masukkan angka kedua: ")
    val result = num1 - num2
    println("Hasil pengurangan: $result")
}

fun doMultiplication() {
    val num1 = getNumber("Masukkan angka pertama: ")
    val num2 = getNumber("Masukkan angka kedua: ")
    val result = num1 * num2
    println("Hasil perkalian: $result")
}

fun doDivision() {
    val num1 = getNumber("Masukkan angka pertama: ")
    val num2 = getNumber("Masukkan angka kedua: ")
    
    if (num2 != 0.0) {
        val result = num1 / num2
        println("Hasil pembagian: $result")
    } else {
        println("Pembagian oleh nol tidak diizinkan.")
    }
}

fun getNumber(prompt: String): Double {
    print(prompt)
    return readLine()?.toDouble() ?: 0.0
}
